{{#if errorMessages}}
<div>
    <div class="errorContainer">
        {{#each errorMessages}}
        <p>{{this}}</p>
        {{/each}}
    </div>
</div>
{{/if}}

<main id="catalog">
    <section class="game-market">
        <h1>Game Trade Code</h1>
        <div class="offer-list">

            {{#each games}}
            {{>game}}
            {{else}}

            <div class="no-offer">
                <p>There are no game offers found!</p>
            </div>
            {{/each}}

        </div>
    </section>
</main>