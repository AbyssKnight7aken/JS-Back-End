<main>
    <!-- Start Add Photo Section -->
    <div class="createPage">
        <h2>Add photo</h2>
        <!-- Start Add Photo Form -->
        <form action="/photos/create" method="POST">
            <p>
                <input type="text" name="name" placeholder="Name" value="{{newPhotoData.name}}">
            </p>

            <p>
                <input type="number" name="age" placeholder="Age" value="{{newPhotoData.age}}">
            </p>

            <p>
                <textarea type="text" name="description" placeholder="Description">{{newPhotoData.description}}</textarea>
            </p>

            <p>
                <input type="text" name="location" placeholder="Location" value="{{newPhotoData.location}}">
            </p>

            <p>
                <input type="text" name="image" placeholder="Link to image" value="{{newPhotoData.image}}">
            </p>
            <!-- Add Photo Button -->
            <button class="add-btn" type="submit">Add Photo</button>
        </form>
    </div>
</main>